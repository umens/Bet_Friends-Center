{
    "server": {
        "auth": {
            "saltFactor": 10,
            "secretKey": "ChangeThisSecret"
        },
        "connection": {
            "port": 3000,
            "routes": {
                "cors": {
                    "origin": [
                        "*"
                    ],
                    "headers": [
                        "Access-Control-Allow-Origin",
                        "Access-Control-Allow-Headers",
                        "Origin",
                        "X-Requested-With",
                        "Content-Type",
                        "Authorization"
                    ],
                    "credentials": true
                }
            },
            "host": "localhost"
        }
    },
    "mongodb": {
        "uri": "mongodb://db/api-bet-friend-center"
    },
    "logging": {
        "ops": {
            "interval": 1000
        },
        "reporters": {
            "myConsoleReporter": [{
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{ "log": "*", "response": "*" }]
            }, {
                "module": "good-console"
            }, "stdout"],
            "myFileReporter": [{
                "module": "good-squeeze",
                "name": "Squeeze",
                "args": [{ "ops": "*" }]
            }, {
                "module": "good-squeeze",
                "name": "SafeJson"
            }, {
                "module": "good-file",
                "args": ["./test/fixtures/awesome_log"]
            }]
        }
    }
}