{
  "server": {
    "auth": {
      "saltFactor": 10,
      "secretKey": "ChangeThisSecret"
    },
    "connection": {
      "port": 3000,
      "routes": {
        "cors": {
          "origin": [
            "*"
          ],
          "headers": [
            "Access-Control-Allow-Origin",
            "Access-Control-Allow-Headers",
            "Origin",
            "X-Requested-With",
            "Content-Type",
            "Authorization"
          ],
          "credentials": true
        }
      },
      "host": "localhost"
    }
  },
  "mongodb": {
    "uri": "mongodb://localhost:27017/api-bet-friend-center"
  },
  "logging": {
    "reporters": {
      "console": [{
          "module": "good-squeeze",
          "name": "Squeeze",
          "args": [{
            "response": "*",
            "log": "*"
          }]
        }, {
          "module": "white-out",
          "args": [{
            "password": "remove",
            "email": "^(.*)(?=@)"
          }]
        },
        {
          "module": "good-console",
          "args": [{
            "format": "[[]DD/MMM/YYYY HH:mm:ss ZZ[]]"
          }]
        },
        "stdout"
      ]
    }
  }
}
